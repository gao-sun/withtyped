{
  "name": "@withtyped/server",
  "version": "0.1.0",
  "author": "Gao Sun",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js"
    },
    "./*": {
      "import": "./*"
    }
  },
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepack": "pnpm build",
    "build": "rm -rf lib/ && tsc",
    "dev": "pnpm build --watch --preserveWatchOutput --incremental",
    "dev:test": "pnpm build && pnpm test",
    "lint": "eslint src/",
    "test": "c8 node --test | tap-arc"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@silverhand/eslint-config": "^1.3.0",
    "@silverhand/ts-config": "^1.2.1",
    "@types/koa": "^2.13.5",
    "@types/node": "^18.11.9",
    "@types/sinon": "^10.0.13",
    "c8": "^7.12.0",
    "eslint": "^8.28.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.2",
    "tap-arc": "^0.3.5",
    "typescript": "^4.9.3",
    "zod": "^3.19.1"
  },
  "eslintConfig": {
    "extends": "@silverhand",
    "rules": {
      "unicorn/prevent-abbreviations": "off"
    },
    "ignorePatterns": [
      "src/openapi/openapi-types.ts"
    ]
  },
  "prettier": "@silverhand/eslint-config/.prettierrc",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@withtyped/shared": "workspace:*"
  }
}
